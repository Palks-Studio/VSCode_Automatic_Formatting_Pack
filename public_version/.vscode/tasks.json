{
    "version": "2.0.0",
    "tasks": [
        {
            // Format the current Python file using Autopep8
            "label": "Format current Python file (Autopep8)",
            "type": "shell",
            "detail": "Applies Autopep8 to the active Python file",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "autopep8",
                "--in-place",
                "--aggressive",
                "--max-line-length",
                "100",
                "${file}"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
